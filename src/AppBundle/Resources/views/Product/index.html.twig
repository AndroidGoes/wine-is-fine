{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.year }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-default" role="button" href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-default" role="button" href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
       
            <a class="btn btn-default" role="button" href="{{ path('product_new') }}">
                Create a new entry
            </a>
    
    {% endblock %}
