{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ entity.year }}</td>
            </tr>
        </tbody>
    </table>

        <div class="btn-group" role="group">
            <a class="btn btn-default" href="{{ path('product') }}">
                Back to the list
            </a>
            <a class="btn btn-default" href="{{ path('product_edit', { 'id': entity.id }) }}">
                Edit
            </a>
            

            

        </div>
        {{ form(delete_form) }}

{% endblock %}
